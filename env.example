# 德州扑克游戏 - 环境变量配置示例
# 作用：定义生产环境所需的环境变量

# ===========================================
# 数据库配置
# ===========================================
# MySQL root密码
MYSQL_ROOT_PASSWORD=texasWeb

# MySQL用户和密码
MYSQL_USER=texas_poker_user
MYSQL_PASSWORD=texasWeb

# ===========================================
# Redis配置
# ===========================================
# Redis密码
REDIS_PASSWORD=texasWeb

# ===========================================
# 应用程序配置
# ===========================================
# JWT密钥 (请生成随机字符串)
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long

# 管理员密钥
ADMIN_SECRET=texasWeb

# ===========================================
# 监控配置 (可选)
# ===========================================
# Grafana管理员密码
GRAFANA_PASSWORD=texasWeb

# ===========================================
# 域名配置
# ===========================================
# 主域名
DOMAIN=localhost

# API域名
API_DOMAIN=localhost

# ===========================================
# SSL证书配置 (HTTPS)
# ===========================================
# 证书文件路径
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# ===========================================
# 应用配置
# ===========================================
# 运行环境
NODE_ENV=production

# 前端构建配置
VITE_API_BASE_URL=https://localhost
VITE_WS_HOST=wss://localhost

# ===========================================
# 日志配置
# ===========================================
# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info

# 日志文件路径
LOG_PATH=./logs

# ===========================================
# 备份配置
# ===========================================
# 数据库备份路径
BACKUP_PATH=./backups

# 备份保留天数
BACKUP_RETENTION_DAYS=30

# ===========================================
# 监控和告警
# ===========================================
# 邮件服务器配置 (用于告警通知)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=your_email_password

# 告警接收邮箱
ALERT_EMAIL=shothollis@gmail.com

# ===========================================
# 性能配置
# ===========================================
# 数据库连接池大小
DB_MAX_CONNECTIONS=20
DB_MAX_IDLE_CONNECTIONS=10

# Redis连接池大小
REDIS_POOL_SIZE=50

# WebSocket连接限制
WS_MAX_CONNECTIONS=1000

# ===========================================
# 安全配置
# ===========================================
# CORS允许的域名 (多个域名用逗号分隔)
CORS_ALLOWED_ORIGINS=https://localhost

# 请求限制 (每分钟)
RATE_LIMIT_PER_MINUTE=60

# 登录失败尝试限制
LOGIN_ATTEMPT_LIMIT=5

# 登录失败锁定时间 (分钟)
LOGIN_LOCKOUT_DURATION=10 